          <Text text="Version 1.37" textAlign="Center" width="100%"/>
          <Text text="Published 3 months ago" textAlign="Center"/>
        </l:BlockLayoutCell>
        <!-- THIRD BLOCK -->
        <l:BlockLayoutCell class="cursorcontrol blockcolor7" id="cell3" title="Cloud for Finance" titleAlignment="Center" width="1">
