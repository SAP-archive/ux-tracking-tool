          <Text text="Published 3 months ago" textAlign="Center"/>
        </l:BlockLayoutCell>
      </l:BlockLayoutRow>
      <!-- THIS IS THE TITLE -->
      <l:BlockLayoutRow>
        <l:BlockLayoutCell title=" Updated"></l:BlockLayoutCell>
      </l:BlockLayoutRow>
